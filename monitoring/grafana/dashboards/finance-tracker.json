{
  "uid": "finance-tracker",
  "title": "Personal Finance Tracker Metrics",
  "tags": ["finance", "metrics"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "HTTP Requests / s",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(http_requests_total[1m])) by (endpoint)" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "P95 Latency (s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "targets": [ { "refId": "A", "expr": "sum(http_requests_total)" } ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Success Rate (%)",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(http_requests_total{status=\"200\"}[5m])) / sum(rate(http_requests_total[5m])) * 100" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    }
  ]
}